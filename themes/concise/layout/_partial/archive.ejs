<%
var title = '';
if (page.category) title = page.category;
if (page.archive){
  if (page.year) title = page.year + (page.month ? '/' + page.month : '');
  else title = __('Archives');
}
%>

<% if (pagination == 2){ %>
  <% page.posts.each(function(item){ %>
    <%- partial('article', {item: item, index: true}) %>
  <% }); %>

  <%- partial('pagination') %>
<% } else { %>
  <div class="archive">
  <h2 class="archive-title<% if (page.tag){ %> tag<% } else if (page.category){ %> category<% } %>"><%= title %></h2>
    <% page.posts.each(function(item){ %>
      <article>
        <div class="post-content">
          <header>
            <h2 class="archive-post">
              <span class="post-date" datetime="<%= item.date.toDate().toISOString() %>"><%= item.date.format(config.date_format) %></span>
              <a href="<%- config.root %><%- item.path %>"><%= item.title %></a></h1>
          </header>
        </div>
      </article>
    <% }); %>
  </div>
<% } %>
