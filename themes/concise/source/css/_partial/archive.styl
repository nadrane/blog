.archive-title
  color color-meta
  font-weight bold
  padding 16px 24px

.archive-post
  color color-meta
  font-weight normal
  padding 0 0 24px 0
  margin-bottom -30px
  text-shadow 0 0 1px #fff
  a
    color color-font
    &:hover
      color color-link
      text-decoration none

  &.tag
    &:before
      content '\f02b'

  &.category
    &:before
      content '\f07b'

.archive
  border-bottom 1px solid color-border
  margin-bottom 50px

  span
    color color-meta
    font 0.8em font-title
    margin-top 5px
    margin-right 10px
    margin-bottom 5px
    margin-left 10px

  article
    box-shadow none
    background: none
    margin: 0
    .post-content
      margin-bottom 0
      padding 16px 15px
